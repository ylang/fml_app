<h1 class="pageTitle">Post a new FML message</h1>
<%= form_for(@message) do |f| %>
    <% if @message.errors.any? %>
        <h2>Errors:</h2>
        <ul>
          <% @message.errors.full_messages.each do |m| %>
          <li>
            <%= m %>
          </li>
          <% end %>
        </ul>
        <% end %>
<div id="newMessageBox" class="messageBox">
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :a_challenge_question_used_to_delete_post %><br />
    <%= f.text_field :challenge_question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <%= link_to 'Back', messages_path %>
</div>
<% end %>